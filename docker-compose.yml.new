services:
  portfolio-server:
    build: .
    container_name: portfolio-server
    network_mode: "bridge"
    ports:
      - "3002:3002"  # HTTP
      - "3003:3003"  # HTTPS
    environment:
      - NODE_ENV=production
      - OPENAI_API_KEY=${OPENAI_API_KEY}
    volumes:
      - ./data:/usr/src/app/data
      - ./server/ssl:/usr/src/app/server/ssl:ro  # Mount SSL certificates as read-only
    restart: unless-stopped